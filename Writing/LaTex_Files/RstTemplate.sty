		%opt caption without cite for listoffigures
		\ifx&#3&
			\caption{#2}
		\else
			\caption[#3]{#2}
		\fi
		%opt label if not empty
		\ifx&#4&
		\else
			\label{#4}
		\fi
	\end{figure}}
	
\newcommand{\svgPlot}[6]{ %image_name 1, width 2,  caption 3, opt_caption 4, label 5, opt_position 6
